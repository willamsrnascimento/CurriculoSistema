@model SistemaCurriculos.Models.Curriculo;

<h3>Novo Currículo</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Curriculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Nome" id="Nome" class="validate" />
                    <label for="Nome">Nome</label>
                    <span asp-validation-for="Nome" class="red-text darken-3"></span>
                </div>
            </div>

            <div class="row">
                <input asp-action="Criar" type="submit" value="Criar" class="btn btn-small green darken-1" /> &nbsp;
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}