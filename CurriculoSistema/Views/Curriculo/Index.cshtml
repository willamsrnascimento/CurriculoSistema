@model IEnumerable<SistemaCurriculos.Models.Curriculo>

@{
    ViewData["Title"] = "Currículos";
}

<h2>@ViewData["Title"]</h2>



<p>Relação de currículos cadastrados</p>

<br />
<a href="#">Incluir Novo</a>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Curriculo curriculo in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(mc => curriculo.Nome)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@curriculo.Id">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@curriculo.Id">Detalhes</a>
                    <a href="#" class="btn-link" data-toggle="modal" data-target="#modalExcluir" onclick="excluirFuncionarioModal(@curriculo.Id, '@curriculo.Nome')">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

