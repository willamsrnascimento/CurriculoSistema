<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurriculoSistema</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar-fixed">
        <nav class="teal darken-4">
            <div class="nav-wrapped body-content">
                <a href="#" class="brand-logo">Sistema de Currículos</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Usuario" asp-action="Registrar">Registrar</a></li>
                        <li><a asp-controller="Usuario" asp-action="Login">Logar</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Curriculo" asp-action="Index">Meus Currículos</a></li>
                        <li><a asp-controller="TipoCurso" asp-action="Index">Tipo de Cursos</a></li>
                        <li><a asp-controller="InformacaoLogin" asp-action="Index">Minhas Informações</a></li>
                        <li><a asp-controller="Usuario" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </nav>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CurriculoSistema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
