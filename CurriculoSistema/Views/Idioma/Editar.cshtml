@model SistemaCurriculos.Models.Idioma;

<h3>Editar Idioma</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Nome" id="Nome" class="validate" />
                    <label for="Nome">Nome</label>
                    <span asp-validation-for="Nome" class="red-text darken-3"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Nivel" id="Cargo" class="validate" />
                    <label for="Nivel">Nível</label>
                    <span asp-validation-for="Nivel" class="red-text darken-3"></span>
                </div>
            </div>

            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.CurriculoId" />

            <div class="row">
                <input type="submit" value="Editar" class="btn btn-small green darken-1" /> &nbsp;
                <a asp-action="Detalhe" asp-controller="Curriculo" asp-route-id="@Model.CurriculoId">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}